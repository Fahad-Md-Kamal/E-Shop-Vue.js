@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <form class="p-2 bg-dark text-light" method="post">
        <div class="form-group">
            <label>Name:</label><br />
            <input class="form-control" asp-for="Product.Name" /><br />
        </div>
        <div class="form-group">
            <label>Description:</label><br />
            <input class="form-control" asp-for="Product.Description" /><br />
        </div>
        <div class="form-group">
            <label>Price:</label><br />
            <input class="form-control" asp-for="Product.Price" /><br />
        </div>
        <div class="form-group">
            <input class="form-control btn btn-primary" type="submit" value="Save Product" />
        </div>
    </form>
</div>


<div>

    @{
        foreach (var p in Model.Products)
        {
            <p>
                @p.Name - @p.Description - @p.Price
            </p>
        }

    }

</div>